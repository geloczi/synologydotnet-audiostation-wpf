<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Panels -->
    <Color x:Key="PanelSeparatorColor">Black</Color>
    <Color x:Key="PanelBackgroundColor">#181818</Color>
    <Color x:Key="PlayControlsPanelBackgroundColor">#181818</Color>
    
    <!-- Borders -->
    <Color x:Key="BorderColor">#39424A</Color>
    <Color x:Key="TileBorderColor">#39424A</Color>

    <!-- Text -->
    <Color x:Key="TextForegroundColor">LightGray</Color>
    <Color x:Key="ActiveForegroundColor">Red</Color>
    <Color x:Key="ActiveBackgroundColor">#22272D</Color>
    <Color x:Key="SelectionForegroundColor">#FF8000</Color>
    <Color x:Key="SelectionBackgroundColor">Black</Color>
    <Color x:Key="InactiveForegroundColor">#A0A0A0</Color>

    <Color x:Key="H1ForegroundColor">#A0A0A0</Color>
    <Color x:Key="HighlightForegroundColor">White</Color>
    
</ResourceDictionary>